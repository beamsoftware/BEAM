<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:BEAM.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="1000"
        x:Class="BEAM.Views.AboutWindow"
        x:DataType="viewModels:AboutWindowViewModel"
        Title="About BEAM"
        Width="750"
        Height="500"
        SizeToContent="WidthAndHeight">

    <Design.DataContext>
        <viewModels:AboutWindowViewModel />
    </Design.DataContext>


    <StackPanel Orientation="Vertical" Margin="20, 10, 20, 0">
        <TextBlock FontSize="24" FontWeight="Bold" Text="About BEAM" />
        <Separator Background="{DynamicResource ThemeAccentBrush}" Margin="10 10 10 5"></Separator>

        <TextBlock FontWeight="Bold" Margin="0 10 0 0">Version</TextBlock>
        <TextBlock Text="{Binding Version}"></TextBlock>

        <TextBlock FontWeight="Bold" Margin="0 10 0 0">Copyright</TextBlock>
        <TextBlock Text="{Binding Copyright}"></TextBlock>

        <TextBlock FontWeight="Bold" Margin="0 10 0 0">Licenses of external software</TextBlock>
        <Separator Background="{DynamicResource ThemeAccentBrush}" Margin="10 10 10 5"></Separator>
        <ScrollViewer Margin="0 0 0 10" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Width="750" Height="300"
                      Padding="0">
            <ItemsControl ItemsSource="{Binding Licenses}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0 5">
                            <Expander.Header>
                                <TextBlock Text="{Binding Name}" />
                            </Expander.Header>
                            <TextBlock Text="{Binding Licence}" />
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </StackPanel>
</Window>