<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BEAM.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BEAM.Views.StatusBar"
             x:DataType="vm:StatusBarViewModel">
    
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Svg Path="../Assets/error.svg" Width="16" Height="16" Margin="2"/>
        <TextBlock VerticalAlignment="Center" Margin="5, 0">15 Errors</TextBlock>
        <Svg Path="../Assets/warning.svg" Width="16" Height="16" Margin="2"/>
        <TextBlock VerticalAlignment="Center" Margin="5, 0">3 Warnings</TextBlock>
        <Svg Path="../Assets/info.svg" Width="16" Height="16" Margin="2"/>
        <TextBlock VerticalAlignment="Center" Margin="5, 0">3 Messages</TextBlock>
    </StackPanel>
    
</UserControl>

